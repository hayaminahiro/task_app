<% provide(:title, "Edit Task") %>


<h1>タスク編集</h1>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(model: @task, url: user_task_path, local: true, method: :patch) do |f| %>
        <%= render 'shared/error_messages2' %>

        <%= f.label "名称" %>
        <%= f.text_field :task_title, value: @task.task_title, class: 'form-control' %>

        <%= f.label "詳細", class: "label-login" %>
        <%= f.text_area :task_details, value: @task.task_details, rows: 5, class: 'form-control' %>

        <%= f.submit "更新", class: "btn btn-primary new-btn" %>
        <%= link_to "キャンセル", user_tasks_url, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
