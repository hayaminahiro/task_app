<% provide(:title, current_user.name) %>

<%= render 'shared/error_messages2' %>

<h1>タスク詳細</h1>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="active col-md-2" >ID</th>
            <td><%= @task.id %></td>
          </tr>
          <tr>
            <th class="active">名称</th>
            <td><%= @task.task_title %></td>
          </tr>
          <tr>
            <th class="active">詳細</th>

            <td><%= simple_format(text_url_to_link(h(@task.task_details)).html_safe) %></td>
          </tr>
          <tr>
            <th class="active">作成日</th>
            <td><%= l(@task.created_at, format: :short) %></td>
          </tr>
          <tr>
            <th class="active">更新日</th>
            <td><%= l(@task.updated_at, format: :short) %></td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "編集", edit_user_task_path(@user, @task.id), class: "btn btn-lg btn-success" %>
        <%= link_to "削除", user_task_path(@user, @task.id), method: :delete,
                    data: { confirm: "「#{@task.task_title}」を削除してよろしいですか？" }, class: "btn btn-lg btn-danger" %>
      </div>
    </div>
  </div>
</div>
